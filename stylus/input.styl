input 
  height 24px
  padding 0 7px 1px
  -webkit-transition border-color ease .1s
  transition border-color ease .1s
  background #fff
  border 1px solid #d3d3d3
  -webkit-border-radius 1px
  border-radius 1px
  font-family inherit
  font-size 14px
  font-weight 400

  &:hover
    border-color #bbb

  &:focus
    -webkit-box-shadow none
    box-shadow none
    border-color #3367d6
    outline none

  &.error
    border-color #d62640

fieldset
  &[disabled]
    input
      border-color silver !important