@import "../shared"
@import "../table"
@import "../tabs"

.header
  display flex
  align-items baseline
  background-color color-blue
  color color-white
  box-shadow 0 3px 4px 0 rgba(0,0,0,0.2), 0 3px 3px -2px rgba(0,0,0,0.14), 0 1px 8px 0 rgba(0,0,0,0.12)

  &__title
    font-size 22px
    font-weight 400
    margin 0
    padding 12px 9px 12px 50px

  &__links
    &__link
      margin-right 5px
      color color-white
      text-decoration none
      height 100%
      padding 5px 10px 3px 10px
      font-weight 400

      &.active
        background-color color-blue-light-2

.row
  display flex

.col
  flex 1

  &:not(:first-child)
    margin-left 20px


.content
  padding 20px 20px

  h1
  h2
  h3
  h4
    margin 0 0 16px 0
    font-weight 400
  h1
    font-size 22px
  h2
    font-size 18px
  h3
    font-size 14px

.scheduler
  &__overview
    margin-bottom 30px
    h4
      margin-bottom 0
    form
      margin-top 10px
      padding-left 20px
      label
        font-weight 500
        font-size font-size-small

        span
          margin-bottom 3px
          margin-top 5px
          display block
        input
          width 100%